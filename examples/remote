# Example lunch configuration file which launches one command on a remote host using SSH.
# The two other commands are lauched locally.

HOST = "brrr" # Remote host for example
USER = "miville" # Remote user for example

# local:
add_command("xlogo", title="local_xlogo")
add_command("xeyes", title="local_xeyes")

# remote: (on remote host's display)
add_command("xlogo", env={"DISPLAY":":0.0"}, host=HOST, user=USER, title="remote_xlogo")
